<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title1" >
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title2" >
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title3" >
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title4" >
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text1" >
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText1" >
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonText2" >
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabText" >
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Number" >
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.ActiveItemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.InactiveItemTextAppearance</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavigationView.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
